{
  "name": "goodgraphics",
  "version": "0.16.0",
  "description": "A library for scripting SVGs.",
  "scripts": {
    "dev": "microbundle watch",
    "build": "microbundle",
    "lint": "eslint .",
    "test": "jest",
    "prepublish": "npm run lint && npm test && npm run build",
    "examples": "eleventy --input=examples --serve --port=3000"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.1",
    "@babel/preset-env": "^7.13.12",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.22.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.23.0",
    "husky": "^5.2.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "microbundle": "^0.13.0",
    "prettier": "^2.2.1"
  },
  "source": "src/index.js",
  "main": "dist/goodgraphics.js",
  "module": "dist/goodgraphics.module.js",
  "unpkg": "dist/goodgraphics.umd.js",
  "author": "Romello Goodman",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/romellogoodman/goodgraphics.js.git"
  },
  "keywords": [
    "svgs"
  ],
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "eslintConfig": {
    "extends": "react",
    "parserOptions": {
      "sourceType": "module"
    },
    "plugins": [
      "prettier"
    ],
    "env": {
      "browser": true,
      "es6": true,
      "node": true,
      "jest": true
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "comma-dangle": 0,
      "indent": 0,
      "max-len": 0,
      "no-console": 1,
      "no-unused-vars": 1,
      "object-curly-spacing": [
        2,
        "never"
      ],
      "operator-linebreak": 0,
      "prettier/prettier": "error",
      "space-before-function-paren": 0
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,json,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "bracketSpacing": false,
    "singleQuote": true
  }
}
